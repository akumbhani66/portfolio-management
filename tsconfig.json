{
  "compilerOptions": {
    "target": "es6",
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": true,
    "module": "commonjs",
    "rootDir": "src",
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom"
    ],
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}